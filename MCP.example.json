{
  "version": "2025-01-01",
  "systemPrompt": "",
  "mcpServers": {
    "exa": {
      "command": "bunx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.exa.ai/mcp"
      ]
    },
    "ddg-search": {
      "command": "uvx",
      "args": [
        "duckduckgo-mcp-server"
      ]
    },
    "mcp-run-python": {
      "command": "uvx",
      "args": [
        "mcp-run-python@latest",
        "--deps",
        "numpy,pandas,requests,httpx,beautifulsoup4,python-docx,openpyxl,pillow,openai,anthropic,matplotlib,seaborn,plotly",
        "stdio"
      ],
      "description": "提供 Pyodide 沙盒内的 Python 执行环境，默认使用 stdio 传输，已配置常用 AI 依赖包"
    }
  }
}